<% if answer.created_at %>
<li>
<span class="content"><p class="lead"><%= answer.body %></p></span>
  <span class="timestamp">
    Answered <%= time_ago_in_words(answer.created_at) %> ago by <%= link_to answer.user.name, answer.user %>
      <% if current_user == answer.user %>
        <%= link_to "delete", [answer.question, answer] , method: :delete %>
      <% end %>
  </span>
</li>
<% end %>
