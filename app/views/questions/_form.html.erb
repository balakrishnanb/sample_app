<%= form_for @question do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
        <%= f.label :title %><br />
        <%= f.text_field :title, autofocus: true %>
    </div>
    <div class="field">
        <%= f.label :content %><br />
        <%= f.text_area :content %>
    </div>
    <div class="actions">
        <%= f.submit "Ask" %>
    </div>
<% end %>
